<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/availablelead_called_alertdialog"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="Just Now Called  !"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/cancel_img_called"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:src="@drawable/alertdialog_cancelimg" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#FFF"
        android:paddingBottom="16dp">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/newcaller_calling_defaultimg"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/caller_defaultimg"
            android:layout_marginTop="8dp"
            />


        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/newcaller_calling_defaultimg"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/availablelead_called_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Selva Ganapathy"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newcaller_called_phno"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:text="QUALIFIED LEAD "
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l1"
            android:orientation="vertical">

            <Button
                android:id="@+id/availlead_called_followbt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#45bd82"
                android:text="follow-up"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#d5d6d8"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp">

                <Button
                    android:id="@+id/availlead_called_blockbt"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="#acae39"
                    android:paddingRight="1dp"
                    android:text="BLOCK"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/availlead_called_proposalbt"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="#61b45a"
                    android:paddingLeft="1dp"
                    android:text="PROPOSAL"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/availlead_called_finalsationbt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#c93a50"
                android:text="FINALISATION"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#d5d6d8"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp">

                <Button
                    android:id="@+id/availlead_called_prebookbt"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="#4052dd"
                    android:paddingRight="1dp"
                    android:text="PRE-BOOK"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/availlead_called_sitevisitbt"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:background="#a9539d"
                    android:paddingLeft="1dp"
                    android:text="SITEVISIT"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>