<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_availablelead_calling_alertdialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/calling_alertdialog_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="Incoming Caller Info !"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/id_alerdialog_cancel_img"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:src="@drawable/alertdialog_cancelimg" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#FFF"
        android:paddingBottom="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/newcaller_calling_defaultimg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/caller_defaultimg"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/newcaller_calling_defaultimg"
            android:gravity="center"
            android:layout_marginLeft="25dp"


            android:orientation="vertical">

            <TextView
                android:id="@+id/availablecaller_calling_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Selva Ganapathy"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/availablecaller_calling_phno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/availablecaller_calling_name"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="+9179895941248"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/availablecaller_calling_phno"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="PRESENT LEAD"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                 />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>